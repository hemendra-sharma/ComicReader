<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comic_list_item_background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/no_thumbnail"
        android:scaleType="fitCenter"
        android:contentDescription="@string/cover_image"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivCover"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/comic_name"/>

    <TextView
        android:id="@+id/tvLastUpdated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivCover"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/last_updated_mmm_dd_yyyy"/>

    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivCover"
        android:layout_below="@+id/tvLastUpdated"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/categories_cat1_cat2_cat3_"/>

</RelativeLayout>