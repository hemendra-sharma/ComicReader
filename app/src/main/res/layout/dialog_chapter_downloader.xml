<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bbc2e4"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/downloading"
            android:textColor="#000000"
            android:textSize="18sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tvProgress1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvInfo"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="0%"
            android:textColor="#000000"
            android:textSize="12sp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/ivProgress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvProgress1"
            android:layout_alignTop="@+id/tvProgress1"
            android:layout_alignBottom="@+id/tvProgress1"
            android:scaleType="fitXY"
            android:contentDescription="@string/progress"/>

        <TextView
            android:id="@+id/tvProgress2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvProgress1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="0%"
            android:textColor="#000000"
            android:textSize="12sp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/ivProgress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvProgress2"
            android:layout_alignTop="@+id/tvProgress2"
            android:layout_alignBottom="@+id/tvProgress2"
            android:scaleType="fitXY"
            android:contentDescription="@string/progress"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_margin="3dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/btn_selector"
        android:text="@string/cancel"/>

</RelativeLayout>